application: splitter [
  documentation: "Split sequence(s) into smaller sequences"
  groups: "Edit"
    relations: "0000156 topic Sequence editing"
    relations: "0000369 operation Sequence cutting"
]

section: input [
  information: "Input section"
  type: "page"
]

  boolean: feature [
    default: "N"
    information: "Use feature information"
    relations: "0002135 data Toggle"
  ]

  seqall: sequence [
    parameter: "Y"
    type: "any"
    features: "$(feature)"
    relations: "0000848 data Sequence"
    relations: "0000849 data Sequence record"
    relations: "0002178 data 1 or more"
  ]

endsection: input

section: additional [
  information: "Additional section"
  type: "page"
]

  integer: size [
    additional: "Y"
    minimum: "1"
    default: "10000"
    information: "Size to split at"
    relations: "0001249 data Sequence length"
  ]

  integer: overlap [
    additional: "Y"
    minimum: "0"
    maximum: "@($(size)-1)"
    default: "0"
    failrange: "N"
    trueminimum: "Y"
    information: "Overlap between split sequences"
    relations: "0001249 data Sequence length"
  ]

endsection: additional

section: advanced [
  information: "Advanced section"
  type: "page"
]

  boolean: addoverlap [
    default: "N"
    information: "Include overlap in output sequence size"
    relations: "0002135 data Toggle"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  seqoutall: outseq [
    parameter: "Y"
    features: "$(feature)"
    relations: "0000848 data Sequence"
    relations: "0000849 data Sequence record"
    relations: "0002178 data 1 or more"
  ]

endsection: output
