application: fdnaml [
  documentation: "Estimates phylogenies from nucleic acid
                  sequence Maximum Likelihood"
  groups: "Phylogeny:Molecular sequence"
  gui: "yes"
  batch: "yes"
  cpu: "high"
  embassy: "phylipnew"
]

section: input [
  information: "Input section"
  type: "page"
]

seqsetall: sequence  [
  parameter: "Y"
  type: "gapany"
  help: "File containing a sequence allignment"
]

tree: intreefile [
  parameter: "Y"
  nullok: "Y"
  knowntype: "newick"
]

integer: ncategories  [
  additional: "Y"
  default: "1"	
  minimum: "1"
  maximum: "9"
  information: "Number of substitution rate categories"
]

properties: categories  [
  additional: "Y"
  characters: "1-$(ncategories)"
  information: "File of substitution rate categories"
  nullok: "Y"
]

properties: weights  [
  additional: "Y"
  characters: "01"
  information: "Weights file: Ignore sites with weight zero"
  nullok: "Y"
]

endsection: input

section: output [
  information: "Output section"
  type: "page"
]

outfile: outfile  [
  parameter: "Y"
  knowntype: "dnaml output"
]

outfile: outtreefile  [
  extension: "treefile"
  information: "Tree file name"
  knowntype: "newick tree"
  nullok: "Y"
]

boolean: printdata  [
  additional: "Y"
  default: "N"
  information: "Print out the data at start of run"
]

boolean: progress  [
  additional: "Y"
  default: "N"
  information: "Print indications of progress of run"
]

endsection: output

section: additional [
  information: "Additional section"
  type: "page"
]

list: gamma  [
  additional: "y"
  minimum: "1"
  maximum: "1"
  header: "Gamma distribution"
  values: "gamma:Gamma distribution, coefficient of variation (cvi) required;
           invar:Gamma+invariant, cvi and invarfrac values required;
           hmm:Hidden Markov categopries and rates;
           none:No distribution parameteres used"
  information: "Gamma distribution"
  default: "none"
]

float: coefficient [
  additional: "y"
  information: "Coefficient of variation"
  minimum: "0.001"
  maximum: "1.0"
  default: "1.0"
]

float: invarfrac  [
  additional: "Y"
  information: "Fraction of invariant sites"
  default: "0.0"
  minimum: "0.0"
  maximum: "0.9999"
]

array: rates [
  additional: "$(categories)"
  information: "Category rates"
  default: "1.0"
  minimum: "0.0"
  size: "$(ncategories)"
  sumtest: "N"
]

integer: nhmmcategories  [
  additional: "Y"
  default: "1"	
  minimum: "1"
  maximum: "9"
  information: "Number of HMM rate categories"
]

array: hmmrates [
  additional: "@($(nhmmcategories) > 1)"
  information: "HMM category rates"
  default: "1.0"
  minimum: "0.0"
  size: "$(nhmmcategories)"
  sumtest: "N"
]

array: hmmprobabilities [
  additional: "$(nhmmcategories) > 1)"
  information: "Probability for each HMM category"
  default: "1.0"
  minimum: "0.0"
  maximum: "1.0"
  size: "$(nhmmcategories)"
  sum: "1.0"
]

float: lambda [
  additional: "Y"
  default: "1.0"
  information: "Mean block length of sites having the same rate"
  minimum: "1.0"
]

float: ttratio  [
  additional: "y"
  information: "Transition/transversion ratio"
  default: "2.0"
  maximum: "100.0"
]

array: basefreqs [
  additional: "y"
  information: "Base frequencies"
  size: "4"
  minimum: "0.0"
  maximum: "1.0"
  default: "0.25 0.25 0.25 0.25"
  sum: "1.0"
]

boolean: global [
  additional: "Y"
  default: "N"
  information: "Global rearrangements"
]

boolean: lengths [
  additional: "Y"
  default: "N"
  information: "Use branch lengths from user trees"
]

boolean: reconsider [
  additional: "Y"
  default: "N"
  information: "Rearrange starting with user tree"
]

boolean: improve [
  additional: "Y"
  default: "N"
  information: "Slower but less rough analysis"
]

boolean: hypstate [
  additional: "Y"
  default: "N"
  information: "Reconstruct hypothetical sequences"
]

boolean: freqsfrom [
  additional: "Y"
  default: "Y"
  information: "Use empirical base frequencies from seqeunce input"
]

endsection: additional
