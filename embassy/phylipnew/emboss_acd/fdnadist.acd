application: fdnadist [
  documentation: "Nucleic acid sequence Distance Matrix
                  program"
  groups: "Phylogeny:Molecular sequence"
  embassy: "phylipnew"
]

section: input [
  information: "Input section"
  type: "page"
]

seqsetall: sequence  [
  parameter: "Y"
  type: "gapany"
]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

list: method  [
  standard: "y"
  minimum: "1"
  maximum: "1"
  header: "Distance methods"
  values: "F84:F84 distance model; Kimura:Kimura 2-parameter distance;
            Jukes:Jukes-Cantor distance; LogDet:LogDet distance;
            Similarity:Similarity table"
  information: "Choose the method to use"
  default: "F84"
]

endsection: required

section: output [
  information: "Output section"
  type: "page"
]

outfile: outfile  [
  parameter: "Y"
  knowntype: "dnadist output"
]

boolean: printdata  [
  additional: "Y"
  default: "N"
  information: "Print out the data at start of run"
]

boolean: progress  [
  additional: "Y"
  default: "N"
  information: "Print indications of progress of run"
]

outfile: distancefile [
  standard: "@($(method) != Similarity)"
  information: "Distance matrix output"
  knowntype: "distance matrix"
  extension: "distance"
  nullok: "Y"
  nulldefault: "@($(method) == Similarity)"
]

outfile: similarityfile [
  standard: "@($(method) == Similarity)"
  information: "Similarity matrix output"
  knowntype: "similarity matrix"
  extension: "similarity"
  nullok: "Y"
  nulldefault: "@($(method) != Similarity)"
]

endsection: output

section: additional [
  information: "Additional section"
  type: "page"
]

list: gamma  [
  additional: "y"
  minimum: "1"
  maximum: "1"
  header: "Gamma distribution"
  values: "gamma:Gamma distribution, coefficient of variation (cvi) required;
           invar:Gamma+invariant, cvi and invarfrac values required;
           none:No distribution parameteres used"
  information: "Gamma distribution"
  default: "none"
]

float: coefficient [
  additional: "Y"
  information: "Coefficient of variation (F84, Kimura, or Jukes-Cantor
                methods)"
  minimum: "0.001"
  maximum: "1.0"
  default: "1.0"
]

float: invarfrac  [
  additional: "Y"
  information: "Fraction of invariant sites"
  default: "0.0"
  minimum: "0.0"
  maximum: "0.9999"
]

integer: ncategories  [
  additional: "Y"
  default: "1"	
  minimum: "1"
  maximum: "9"
  information: "Number of substitution rate categories"
]

array: rates [
  additional: "@($(ncategories) > 1)"
  information: "Category rates"
  default: "1.0"
  minimum: "0.0"
  size: "$(ncategories)"
  sumtest: "N"
]

properties: categories  [
  additional: "Y"
  characters: "1-$(ncategories)"
  help: "File of substitution rate categories"
  nullok: "Y"
]

properties: weights  [
  additional: "Y"
  characters: "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ"
  information: "File of substitution rate categories"
  nullok: "Y"
]

float: ttratio  [
  additional: "y"
  information: "Transition/transversion ratio"
  default: "2.0"
  maximum: "100.0"
]

array: basefreqs [
  additional: "y"
  information: "Base frequencies"
  size: "4"
  minimum: "0.0"
  maximum: "1.0"
  default: "0.25 0.25 0.25 0.25"
  sum: "1.0"
]

endsection: additional
