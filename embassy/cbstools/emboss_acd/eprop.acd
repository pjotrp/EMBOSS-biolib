application: eprop [
  documentation: "Reports propeptide cleavage sites in proteins"
  groups: "Protein:Motifs"
  embassy: "cbstools"
]

section: input [
  information: "Input section"
  type: "page"
]

  seqset: sequence [
    parameter: "Y"
    type: "any"
    aligned: "Y"
  ]

endsection: input

section: required [
  information: "Required section"
  type: "page"
]

endsection: required

section: advanced [
  information: "Advanced section"
  type: "page"
]

  boolean: plot [
    default: "N"
    information: "Produce graphics"
  ]

  boolean: pcprediction [
    default: "N"
    information: "Perform proprotein convertase prediction"
  ]

  boolean: signalp [
    default: "N"
    information: "Include signal peptide cleavage site prediction"
  ]

endsection: advanced

section: output [
  information: "Output section"
  type: "page"
]

  outfile: outfile [
    parameter: "Y"
    knowntype: "eprop output"
  ]

endsection: output
